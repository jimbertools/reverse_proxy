server {
    listen 80;
    server_name _;
    location / {
        return 301 https://$host$request_uri;
    }    
}

server {
  listen 443 ssl;
  server_name example.jimber.org; 
  
  ssl_certificate /certs/jimbertestingbe.pem;
  ssl_certificate_key /certs/jimbertestingbe.key;

  include /etc/nginx/snippets/good-practices.conf;

  location / {
    root    /var/www/example;
  }
}

# Example of how to use the proxy_pass directive
server {
    listen 443 ssl;
    server_name exampleproxy.jimber.org;

    ssl_certificate /certs/jimbertestingbe.pem;
    ssl_certificate_key /certs/jimbertestingbe.key;

    include /etc/nginx/snippets/good-practices.conf;

  # proxy_set_header Host              $host; # This will probably break things
    proxy_set_header X-Real-IP         $remote_addr;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host  $host;
    proxy_set_header X-Forwarded-Port  $server_port;

    location / {
        set $upstream exampleproxy; # Hostname or ip of container
        proxy_pass http://$upstream$request_uri;
    }

}
